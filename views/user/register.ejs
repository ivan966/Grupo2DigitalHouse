<!DOCTYPE html>
<html>
  <%- include("../partials/head") %>

  <body>
    <%- include("../partials/header") %>
    <div class="login-container">
      <h2>Creá tu cuenta</h2>

      <form action="/register" method="post">
        <div class="form-group">
          <label for="nombre">Nombre:</label>
          <input type="text" id="nombre" name="nombre" value= "<%= locals.old && old.nombre %>" required />
          <% if (locals.errors && errors.nombre) {%>
            <p class="feedback"> <%= errors.nombre.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="apellido">Apellido:</label>
          <input type="text" id="apellido" name="apellido" value="<%= locals.old && old.apellido %>" required />
          <% if (locals.errors && errors.apellido) {%>
            <p class="feedback"> <%= errors.apellido.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" id="email" name="email" value="<%= locals.old && old.email %>" />
          <% if (locals.errors && errors.email) {%>
            <p class="feedback"> <%= errors.email.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="username">Usuario:</label>
          <input type="text" id="username" name="username" value="<%= locals.old && old.username %>" required />
          <% if (locals.errors && errors.username) {%>
            <p class="feedback"> <%= errors.username.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input type="password" id="password" name="password" value="<%= locals.old && old.nombre %>" required />
          <% if (locals.errors && errors.password) {%>
            <p class="feedback"> <%= errors.password.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <input type="submit" value="Crear cuenta" />
        </div>
      </form>
    </div>
    <%- include("../partials/footer") %>
  </body>
</html>
