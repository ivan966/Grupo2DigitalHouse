<!DOCTYPE html>
<html>
  <%- include("../partials/head") %>

  <body>
    <%- include("../partials/header") %>
    <div class="login-container">
      <h2>Creá tu cuenta</h2>

      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="feedback" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form action="/user/register" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="nombre">Nombre:</label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            value="<%= (locals.old && locals.old.nombre) ? locals.old.nombre : '' %>"
            required
          />

        </div>
        <div class="form-group">
          <label for="apellido">Apellido:</label>
          <input
            type="text"
            id="apellido"
            name="apellido"
            value="<%= (locals.old && locals.old.apellido) ? locals.old.apellido : '' %>"
            required
          />

        </div>
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= (locals.old && locals.old.email) ? locals.old.email : '' %>"
          />

        </div>
        <div class="form-group">
          <label for="username">Usuario:</label>
          <input
            type="text"
            id="username"
            name="username"
            value="<%= (locals.old && locals.old.username) ? locals.old.username : '' %>"
            required
          />

        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input
            type="password"
            id="password"
            name="password"
            value="<%= (locals.old && locals.old.password) ? locals.old.password : '' %>"
            required
          />

        </div>
        <div>
          <label for="profile-pic">Foto de perfil:</label>
          <input type="file" id="profile-pic" name="profile-pic" />
        </div>
        <div class="form-group">
          <input type="submit" value="Crear cuenta" />
        </div>
      </form>
    </div>
    <%- include("../partials/footer") %>
  </body>
</html>


