<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head")%>
  <body>
    <%-include("../partials/header")%>

    <main>
      <div class="product-form">
        <form
          method="POST"
          action="/productos/<%= producto.id %>?_method=PUT"
          enctype="multipart/form-data"
        >
          <div class="product-form-items">
            <label for="nombre">Nombre del producto</label>
            <input
              type="text"
              name="nombre"
              id="nombre"
              value="<%= producto.nombre %>"
            />
          </div>

          <div class="product-form-items">
            <label for="descripcion">Descripción</label>
            <input
              type="text"
              name="descripcion"
              id="descripcion"
              value="<%= producto.descripcion %>"
            />
          </div>

          <div class="product-form-items">
            <label for="imagenes">Imágenes</label>
            <input type="file" name="imagen" id="imagenes" />
          </div>

          <div class="product-form-items">
            <label for="categoria">Categoría</label>
            <select name="categoria" id="categoria">
              <!-- <%if(producto.categoria==1){%>
                selected
                <%}%> -->
              <option value="1" <%if(producto.categoria==1){%>
                selected
                <%}%>>Traje</option>
              <option value="2" <%if(producto.categoria==2){%>
                selected
                <%}%>>Camisa</option>
              <option value="3" <%if(producto.categoria==3){%>
                selected
                <%}%>>Pantalon</option>
              <option value="4" <%if(producto.categoria==4){%>
                selected
                <%}%>>Chaleco</option>
              <option value="5" <%if(producto.categoria==5){%>
                selected
                <%}%>>Zapato</option>
              <option value="6" <%if(producto.categoria==6){%>
                selected
                <%}%>>Accesorio</option>
            </select>
          </div>

          <div class="product-form-items">
            <label for="color">Color</label>
            <input
              type="text"
              name="color"
              id="color"
              value="<%= producto.color %>"
            />
          </div>

          <div class="product-form-items">
            <label for="precio">Precio</label>
            <input
              type="text"
              name="precio"
              id="precio"
              value="<%= producto.precio %>"
            />
          </div>

          <div class="product-form-items">
            <label for="descuento">Descuento (%)</label>
            <input
              type="text"
              name="descuento"
              id="descuento"
              value="<%=producto.descuento%>"
            />
          </div>

          <div class="product-form-items">
            <label for="cuotas">Cuotas</label>
            <select name="cuotas" id="cuotas">
              <option value="<%= producto.cuotas %>">
                <%= producto.cuotas %>
              </option>
              <option value="3">3</option>
              <option value="6">6</option>
              <option value="9">9</option>
              <option value="12">12</option>
            </select>
          </div>

          <div class="product-form-items">
            <input type="submit" value="Enviar" />
          </div>
        </form>
      </div>
    </main>

    <%-include("../partials/footer")%>
  </body>
</html>
