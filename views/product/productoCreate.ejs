<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head")%>
  <body>
    <%-include("../partials/header")%>

    <main>
      <div class="product-form">
        <form
          method="POST"
          action="/productos/created"
          enctype="multipart/form-data"
        >
          <div class="product-form-items">
            <label for="nombre">Nombre del producto</label>
            <input type="text" name="nombre" id="nombre" />
          </div>

          <div class="product-form-items">
            <label for="descripcion">Descripción</label>
            <textarea
              name="descripcion"
              id="descripcion"
              cols="40"
              rows="10"
            ></textarea>
          </div>

          <div class="product-form-items">
            <label for="imagen">Imágenes</label>
            <input type="file" name="imagen" id="imagen" />
          </div>

          <div class="product-form-items">
            <label for="categoria">Categoría</label>
            <select name="categoria" id="categoria">
              <option value=""></option>
              <option value="1">Traje</option>
              <option value="2">Camisa</option>
              <option value="3">Pantalon</option>
              <option value="4">Chaleco</option>
              <option value="5">Zapato</option>
              <option value="6">Accesorio</option>
            </select>
          </div>

          <div class="product-form-items">
            <label for="color">Color</label>
            <input type="text" name="color" id="color" />
          </div>

          <div class="product-form-items">
            <label for="precio">Precio</label>
            <input type="text" name="precio" id="precio" />
          </div>

          <div class="product-form-items">
            <label for="descuento">Descuento (%)</label>
            <input type="text" name="descuento" id="descuento" />
          </div>

          <div class="product-form-items">
            <label for="cuotas">Cuotas</label>
            <select name="cuotas" id="cuotas">
              <option value=""></option>
              <option value="3">3</option>
              <option value="6">6</option>
              <option value="9">9</option>
              <option value="12">12</option>
            </select>
          </div>

          <div class="product-form-items">
            <input type="submit" value="Crear" />
          </div>
        </form>
      </div>
    </main>

    <%-include("../partials/footer")%>
  </body>
</html>
