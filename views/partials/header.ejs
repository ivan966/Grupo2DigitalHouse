<header>
  <div class="div-header">
    <div class="items-header">
      <div class="items-menu">
        <button type="menu"><i class="fa-solid fa-bars"></i></button>
      </div>
      
      <div class="items-logo">
        <a href="/"><img src="/img/logo11.ico" alt="logo-pagina" /></a>
      </div>

      <div class="items-marca">
        <a href="/"><p>VELVET</p></a>
      </div>
    </div>

    <form class="items-header-search">
      <div class="items-search">
        <input type="text" name="search" id="search" placeholder="Buscar" />
      </div>

      <div class="items-submit">
        <button type="submit" value="search">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
    </form>

    <% if (typeof user !== 'undefined' && user) { %>
      <div class="loged-header">
        <div class="profile-pic-container"><a href="/profile"><img class="profile-pic" src="<%= user.profilePic %>" alt="user-profile-pic"></a></div>
        <a href="/profile" class="bienvenida"><p>Bienvenid@ <%= user.username %>!</p></a>
        <a href="/carrito"><i class="fa-solid fa-cart-shopping"></i></a>
      </div>
    <% } else { %>
      <div class="items-header-link">
        <a href="/login">Iniciar Sesi√≥n</a>
        <a href="/register">Registrarse</a>
        <a href="/carrito"><i class="fa-solid fa-cart-shopping"></i></a>
      </div>
    <% } %>
  </div>
</header>





